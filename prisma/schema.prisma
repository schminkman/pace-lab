generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  
  // Strava-specific fields
  stravaId                Int?      @unique
  historicalSyncComplete  Boolean   @default(false)
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  activities    Activity[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId Int
  refresh_token     String? // TODO Encrypt in prod
  access_token      String? // TODO Encrypt in prod
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Activity {
  id                String   @id @default(cuid())
  
  // Strava data
  stravaId          BigInt   @unique
  userId            String
  name              String
  sportType         String   // "Run", "TrailRun", etc.
  startDate         DateTime
  timezone          String
  
  // Performance metrics (stored in Strava's units)
  distance          Float    // meters
  movingTime        Int      // seconds
  elapsedTime       Int      // seconds
  elevationGain     Float    // meters
  
  // Averages
  averageSpeed      Float?   // meters/second
  maxSpeed          Float?   // meters/second
  averageHeartrate  Float?   // bpm
  maxHeartrate      Int?     // bpm
  
  // Additional data
  kudosCount        Int      @default(0)
  hasHeartrate      Boolean  @default(false)
  
  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Relations
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, startDate])
  @@index([stravaId])
}